<mah:MetroWindow x:Class="NewLibraries.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="MainWindow"
                 Height="600"
                 Width="800"
                 Background="AliceBlue">
    <Grid>
        <mah:ToggleSwitch 
            Header="Show Progress Bar" Height="100" Margin="103,320,0,0" VerticalAlignment="Top" Width="100" Toggled="ToggleSwitch_Toggled1"/>
        <mah:ToggleSwitch 
            Header="Show Label" Height="100" Width="0" Margin="103,121,0,0" VerticalAlignment="Top" Toggled="ToggleSwitch_Toggled" />
        <Label
            x:Name="Label1" Content="Hello, World!" FontSize="20" HorizontalAlignment="Left" Height="35" Margin="388,136,0,0" VerticalAlignment="Top" Width="126"/>
        <mah:MetroProgressBar 
            x:Name="ProgressBar1"  HorizontalAlignment="Left" Height="50" Margin="330,320,0,0" VerticalAlignment="Top" Width="242" ValueChanged="MetroProgressBar_ValueChanged" IsIndeterminate="True"/>
    </Grid>
</mah:MetroWindow>